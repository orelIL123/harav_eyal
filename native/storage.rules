rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ========== HELPER FUNCTIONS ==========
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // ========== CARDS IMAGES ==========
    // כרטיסיות - רק Admin יכול להעלות/למחוק, כולם יכולים לקרוא
    match /cards/{cardId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ========== NEWS IMAGES ==========
    // חדשות - רק Admin יכול להעלות/למחוק, כולם יכולים לקרוא
    match /news/{newsId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ========== COURSES ==========
    // קורסים - רק Admin יכול להעלות/למחוק, משתמשים רשומים יכולים לקרוא
    match /courses/{courseId}/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // ========== USER UPLOADS ==========
    // משתמשים יכולים להעלות רק לפרופיל שלהם
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // ========== ALERTS ==========
    // התראות - רק Admin יכול להעלות/למחוק, כולם יכולים לקרוא
    match /alerts/{alertId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ========== LESSONS ==========
    // שיעורים - רק Admin יכול להעלות/למחוק, כולם יכולים לקרוא
    match /lessons/{lessonId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ========== PODCASTS ==========
    // פודקאסטים - רק Admin יכול להעלות/למחוק, כולם יכולים לקרוא
    match /podcasts/{podcastId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ========== DAILY VIDEOS ==========
    // וידאו יומי - רק Admin יכול להעלות/למחוק, כולם יכולים לקרוא
    match /dailyVideos/{videoId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ========== BOOKS ==========
    // ספרים - רק Admin יכול להעלות/למחוק, כולם יכולים לקרוא
    match /books/{bookId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ========== FLYERS ==========
    // עלונים - רק Admin יכול להעלות/למחוק, כולם יכולים לקרוא
    match /flyers/{flyerId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() &&
                   (request.resource.contentType == 'application/pdf' ||
                    request.resource.contentType.matches('image/.*')) &&
                   request.resource.size < 20 * 1024 * 1024; // Max 20MB
    }
    
    // ========== FAITH VIDEOS ==========
    // סרטוני אמונה - רק Admin יכול להעלות/למחוק, כולם יכולים לקרוא
    match /faith_videos/{videoId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ========== COMMUNITY POSTS ==========
    // פוסטים קהילתיים - רק Admin יכול להעלות/למחוק, כולם יכולים לקרוא
    match /communityPosts/{postId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ========== DEFAULT DENY ==========
    // כל השאר חסום
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}


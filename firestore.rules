rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========== HELPER FUNCTIONS ==========
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isDashboard() {
      return isSignedIn() &&
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'dashboard');
    }
    
    // ========== USERS COLLECTION ==========
    match /users/{uid} {
      // Users can read/write their own document
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && request.auth.uid == uid;

      // Dashboard users can read all users (for statistics)
      allow read: if isDashboard();
      
      // Admins can write role field
      allow update: if isAdmin() && 
                    request.resource.data.diff(resource.data).affectedKeys().hasOnly(['role']);
    }
    
    // ========== DAILY INSIGHTS COLLECTION ==========
    match /dailyInsights/{dateId} {
      // Everyone can read published insights
      allow read: if true;
      
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // ========== DAILY STORIES COLLECTION ==========
    match /dailyStories/{dateId}/clips/{clipId} {
      // Everyone can read stories
      allow read: if true;
      
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // ========== NOTIFICATIONS COLLECTION ==========
    match /notifications/{notificationId} {
      // Only admins can read/write
      allow read, write: if isAdmin();
    }
    
    // ========== FEEDS COLLECTION ==========
    match /feeds/{feedId} {
      // Everyone can read published feeds, admins can read all
      allow read: if resource.data.published == true || isAdmin();
      
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // ========== FAITH LESSONS COLLECTION ==========
    match /faithLessons/{lessonId} {
      // Public read for published lessons
      allow read: if resource.data.published == true || isAdmin();
      
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // ========== LESSONS COLLECTION ==========
    match /lessons/{lessonId} {
      // Public read for all (lessons should be accessible to everyone)
      allow read: if true;
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== PODCASTS COLLECTION ==========
    match /podcasts/{podcastId} {
      // Everyone can read active podcasts (public)
      allow read: if resource.data.isActive == true;
      // Admins can read all (including inactive)
      allow read: if isAdmin();
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== DAILY VIDEOS COLLECTION ==========
    match /dailyVideos/{videoId} {
      // Everyone can read active videos (public)
      // Default to true if isActive field is missing (backward compatibility)
      allow read: if resource.data.isActive != false;
      // Admins can read all (including inactive)
      allow read: if isAdmin();
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== NEWS COLLECTION ==========
    match /news/{newsId} {
      // Published news can be read by everyone (public)
      allow read: if resource.data.isPublished == true;
      // Admins can read all (including drafts)
      allow read: if isAdmin();
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== ALERTS COLLECTION ==========
    match /alerts/{alertId} {
      // Everyone can read active alerts (public)
      allow read: if resource.data.isActive == true;
      // Admins can read all (including inactive)
      allow read: if isAdmin();
      // Only admins can create, update, delete
      allow create, update, delete: if isAdmin();
    }

    // ========== HOME CARDS COLLECTION ==========
    match /homeCards/{cardId} {
      // Public read for all
      allow read: if true;
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== APP CONFIG COLLECTION ==========
    match /appConfig/{configId} {
      // Public read
      allow read: if true;
      // Only admins can modify
      allow write: if isAdmin();
    }

    // ========== INSTITUTIONS COLLECTION ==========
    match /institutions/{institutionId} {
      // Public read for all
      allow read: if true;
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== INSTITUTIONS CONTENT COLLECTION ==========
    match /institutionsContent/{activityId} {
      // All signed-in users can read institution content
      allow read: if isSignedIn();
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== BOOKS COLLECTION ==========
    match /books/{bookId} {
      // Public read for all books (like lessons)
      allow read: if true;
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== FLYERS COLLECTION ==========
    match /flyers/{flyerId} {
      // Everyone can read active flyers (public)
      // Default to true if isActive field is missing (backward compatibility)
      allow read: if resource.data.isActive != false;
      // Admins can read all (including inactive)
      allow read: if isAdmin();
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== COMMUNITY POSTS COLLECTION ==========
    match /communityPosts/{postId} {
      // Everyone can read active community posts (public)
      allow read: if resource.data.isActive == true;
      // Admins can read all (including inactive)
      allow read: if isAdmin();
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== LEADS COLLECTION ==========
    match /leads/{leadId} {
      // Anyone can create a lead (for contact forms)
      allow create: if true;
      // Only admins can read leads
      allow read, update, delete: if isAdmin();
    }

    // ========== FAITH STORIES COLLECTION ==========
    match /faith_stories/{storyId} {
      // Admins can read all stories
      allow read: if isAdmin();
      // Signed-in users can read active stories
      allow read: if isSignedIn() && resource.data.isActive == true;
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== WEEKLY LESSONS COLLECTION ==========
    match /weeklyLessons/{lessonId} {
      // Public read for all weekly lessons
      allow read: if true;
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== DEFAULT DENY ==========
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========== HELPER FUNCTIONS ==========
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // ========== USERS COLLECTION ==========
    match /users/{uid} {
      // Users can read/write their own document
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && request.auth.uid == uid;
      
      // Admins can write role field
      allow update: if isAdmin() && 
                    request.resource.data.diff(resource.data).affectedKeys().hasOnly(['role']);
    }
    
    // ========== DAILY INSIGHTS COLLECTION ==========
    match /dailyInsights/{dateId} {
      // Everyone can read published insights
      allow read: if true;
      
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // ========== DAILY STORIES COLLECTION ==========
    match /dailyStories/{dateId}/clips/{clipId} {
      // Everyone can read stories
      allow read: if true;
      
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // ========== NOTIFICATIONS COLLECTION ==========
    match /notifications/{notificationId} {
      // Only admins can read/write
      allow read, write: if isAdmin();
    }
    
    // ========== FEEDS COLLECTION ==========
    match /feeds/{feedId} {
      // Everyone can read published feeds, admins can read all
      allow read: if resource.data.published == true || isAdmin();
      
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // ========== FAITH LESSONS COLLECTION ==========
    match /faithLessons/{lessonId} {
      // Public read for published lessons
      allow read: if resource.data.published == true || isAdmin();
      
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // ========== LESSONS COLLECTION ==========
    match /lessons/{lessonId} {
      // All signed-in users can read lessons
      allow read: if isSignedIn();
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== PODCASTS COLLECTION ==========
    match /podcasts/{podcastId} {
      // All signed-in users can read active podcasts
      allow read: if isSignedIn() && (resource.data.isActive == true || isAdmin());
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== DAILY VIDEOS COLLECTION ==========
    match /dailyVideos/{videoId} {
      // All signed-in users can read videos
      allow read: if isSignedIn();
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== NEWS COLLECTION ==========
    match /news/{newsId} {
      // Only published news can be read by signed-in users
      allow read: if isSignedIn() && resource.data.isPublished == true;
      // Admins can read all (including drafts)
      allow read: if isAdmin();
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== ALERTS COLLECTION ==========
    match /alerts/{alertId} {
      // All signed-in users can read alerts
      allow read: if isSignedIn();
      // Only admins can create, update, delete
      allow create, update, delete: if isAdmin();
    }

    // ========== HOME CARDS COLLECTION ==========
    match /homeCards/{cardId} {
      // Public read for all
      allow read: if true;
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== APP CONFIG COLLECTION ==========
    match /appConfig/config {
      // Public read
      allow read: if true;
      // Only admins can modify
      allow write: if isAdmin();
    }

    // ========== INSTITUTIONS COLLECTION ==========
    match /institutions/{institutionId} {
      // Public read for all
      allow read: if true;
      // Only admins can modify
      allow create, update, delete: if isAdmin();
    }

    // ========== LEADS COLLECTION ==========
    match /leads/{leadId} {
      // Anyone can create a lead (for contact forms)
      allow create: if true;
      // Only admins can read leads
      allow read, update, delete: if isAdmin();
    }
    
    // ========== DEFAULT DENY ==========
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
